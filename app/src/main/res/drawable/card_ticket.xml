<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="5dp">

    <!-- 灰色阴影 -->
    <item
        android:left="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@android:color/white" />
            <size
                android:width="100dp"
                android:height="25dp"/>
        </shape>
    </item>
    <!-- 白色前景 -->
    <item
        android:bottom="-1dp"
        android:right="1dp">
        <shape android:shape="oval"

            android:useLevel="false">
            <solid
                android:color="#990000ff"/>
            <size
                android:width="2dp"
                android:height="5dp"/>
        </shape>
    </item>
</layer-list>